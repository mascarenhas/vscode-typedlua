{
  "name": "vscode-typedlua",
  "description": "Language support for Typed Lua",
  "author": "Marc AndrÃ© Tanner",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "unpublished",
  "engines": {
    "vscode": "^1.8.0"
  },
  "keywords": [
    "Lua",
    "Typed Lua",
    "LSP",
    "Language Server Client"
  ],
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onLanguage:lua",
    "workspaceContains:**/*.tl"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Typed Lua LSP configuration",
      "properties": {
        "lua.lsp.path": {
          "type": "string",
          "default": "lua-lsp",
          "description": "The path to lua-lsp executable, e.g. /usr/bin/lua-lsp"
        },
        "lua.lsp.arguments": {
          "type": "array",
          "default": ["-d", "/tmp/log"],
          "items": {
            "type": "string"
          },
          "description": "Arguments for Lua LSP server"
        },
        "lua.lsp.strict": {
          "type": "boolean",
          "default": false,
          "description": "Stirct Typed Lua mode."
        },
        "lua.lsp.integer": {
          "type": "boolean",
          "default": false,
          "description": "Support Integer type (Lua >= 5.3)"
        },
        "lua.lsp.trace.server":{
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Trace LSP communication."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "typescript": "^2.1.5",
    "vscode": "^1.0.3"
  },
  "dependencies": {
    "vscode-languageclient": "^3.1.0"
  }
}
